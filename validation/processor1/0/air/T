FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0/air";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 293.15;

boundaryField
{
    airLeft
    {
        type            fixedValue;
        value           uniform 293.15;
    }
    airBottom
    {
        type            zeroGradient;
    }
    airTop
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
    air_to_pcm
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        Tnbr            T;
        kappa           kappa;
        kappaMethod     fluidThermo;
        value           uniform 293.15;
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform 293.15;
    }
}


