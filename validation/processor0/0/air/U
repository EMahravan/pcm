FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    location    "0/air";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0.001);

boundaryField
{
    airLeft
    {
        type            noSlip;
    }
    airBottom
    {
        type            noSlip;
    }
    airTop
    {
        type            noSlip;
    }
    frontAndBack
    {
        type            empty;
    }
    air_to_pcm
    {
        type            noSlip;
    }
    procBoundary0to2
    {
        type            processor;
        value           uniform (0 0 0.001);
    }
}


