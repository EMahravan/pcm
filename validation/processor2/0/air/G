FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0/air";
    object      G;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    airLeft
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           uniform 0;
    }
    airBottom
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           nonuniform 
0
;
    }
    airTop
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           nonuniform 
0
;
    }
    frontAndBack
    {
        type            empty;
    }
    air_to_pcm
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           uniform 0;
    }
    procBoundary2to0
    {
        type            processor;
        value           uniform 0;
    }
    procBoundary2to1
    {
        type            processor;
        value           uniform 0;
    }
}


